        <% } %>
     </div>
     <div class="form-group">
      <label for="re-pass">re-clave</label>
      <input type="password" name="pass2" id="pass2" class="data">
      <small class="text-error errorSubmit" id="errorName"></small>
      <% if (locals.errors && errors.repass2) { %>
      <small id="errorRepass" class="text-error"><%= errors.repass2.msg %></small>
      <% } %>
   </div>


    
