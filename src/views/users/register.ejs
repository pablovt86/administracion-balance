<%- include('../partials/head') %> 

<body>
    <%- include('../partials/headers') %> 
<div class="container-body">
   <div class="container-register">
     <form action="/users/register" id="form" method="post">
     <div class="form-group">
        <label for="nombre">Nombre</label>
      <input type="text" name="name" id="nombre" class="data">
      <small class="text-error errorSubmit" id="errorName"></small>
      <% if (locals.errors && errors.name) { %>
      <small id="errorName" class="text-error"><%= errors.name.msg %></small>
      <% } %>
     </div>
     <div class="form-group">
        <label for="nombre">Apellido</label>
      <input type="text" name="lastname" id="apellido" class="data">
      <small class="text-error errorSubmit" id="errorName"></small>
      <% if (locals.errors && errors.lastname) { %>
      <small id="errorapellido" class="text-error"><%= errors.lastname.msg %></small>
      <% } %>
     </div>
     <div class="form-group">
        <label for="fecha">Fecha</label>
        <input type="date" name="date" id="fecha" class="data">
        <small class="text-error errorSubmit" id="errorFecha"></small>
        <% if (locals.errors && errors.date) { %>
        <small id="errorFecha" class="text-error"><%= errors.date.msg %></small>
        <% } %>
     </div>
     <div class="form-group">
        <label for="email">Email</label>
        <input type="email" name="email" id="email"class="data">
        <small class="text-error errorSubmit" id="errorEmail"></small>
        <% if (locals.errors && errors.email) { %>
        <small id="errorEmail" class="text-error"><%= errors.email.msg %></small>
        <% } %>
     </div>
     <div class="form-group">
        <label for="password">clave</label>
        <input type="password" name="password" id="password"class="data">
        <small class="text-error errorSubmit" id="errorPassword"></small>
        <% if (locals.errors && errorspassword) { %>
